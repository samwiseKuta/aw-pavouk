<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="App.MainWindow"
        Title="App"
        Width="1400"
        Height="750"
        >
    <Grid RowDefinitions="*,2*">
        <StackPanel Orientation="Vertical" Grid.Row="0">
            <Svg Width="200" Path="/Assets/Images/ChatGPT-logo.svg"/>
            <Button Classes ="AddButton" Content="+">
                <Label>New Tournament</Label>
            </Button>
        </StackPanel>
        <Grid Grid.Row="1" RowDefinitions="auto,auto">
                <TextBlock Grid.Row="0" >History</TextBlock>
            <Border Grid.Row="1" Padding="30" Background="">
                <StackPanel Orientation="Horizontal" Spacing="11">
                    <Button Content="Lower"></Button>
                    <Button Content="Lower"></Button>
                    <Button Content="Lower"></Button>
                    <Button Content="Cumstain"></Button>
                    <Button Content="Lower"></Button>
                    <Button Content="Lower"></Button>
                    <Button Content="Lower"></Button>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>

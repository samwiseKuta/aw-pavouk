<UserControl xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ViewModels"
    x:DataType="vm:CategoryPrepViewModel"
    x:Class="Views.CategoryPrepView"
    >
    <Grid ColumnDefinitions="25*,75*" >
        <Grid RowDefinitions="auto,*,auto" Grid.Column="0">
            <StackPanel Orientation="Vertical" Grid.Row="0" Background="">
                <Label 
                    VerticalAlignment="Top"
                    Content="{Binding SelectedTournament.Name}"/>
                <TextBlock 
                    Opacity="{Binding BracketsEmpty}"
                    IsVisible="{Binding BracketsEmpty}"
                    TextWrapping="Wrap"
                    Text="You have not created any categories yet"/>
                <Label 
                    Opacity="{Binding !BracketsEmpty}"
                    IsVisible="{Binding !BracketsEmpty}"
                    Content="Categories"/>
            </StackPanel>
            <ListBox
                IsVisible="{Binding !BracketsEmpty}"
                Opacity="{Binding !BracketsEmpty}"
                ItemsSource="{Binding CreatedBrackets}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedBracket}"
                Grid.Row="1"
                ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Orientation="Vertical"
                            Spacing="10"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical" Classes="HistoryItem">
                            <Label Content="{Binding Name}"/>
                            <Label Content="{Binding Count}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button 
                Grid.Row="2"
                Command="{Binding BackCommand}"
                VerticalAlignment="Bottom">
                <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal">
                    <Label Classes="Icon" Content="&#xE51E;"/>
                    <TextBlock Text="Back"/>
                </StackPanel> 
            </Button>
        </Grid>

    <Grid Grid.Column="1" RowDefinitions="auto,*">

            <Grid Grid.Row="0">
                <Button 
                    Command="{Binding CreateCategoryCommand}" 
                    Classes ="AddButton" 
                    VerticalAlignment="Top"
                    HorizontalAlignment="Stretch"
                    >
                    <Border Classes="AddBorder" HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal" Spacing="0">
                            <TextBlock Classes="AddPrompt" Text="New Category"/>
                            <TextBlock Classes="Plus Icon">&#xE3D4;</TextBlock>
                        </StackPanel>
                    </Border>
                </Button>

                <Button 
                    HorizontalAlignment="Right"
                    HorizontalContentAlignment="Right"
                    Command="{Binding BeginCommand}">
                    <StackPanel Orientation="Horizontal">
                        <Label Classes="" Content="Begin"/>
                        <Label Classes="Icon" Content="&#xEA36;"/>
                    </StackPanel >
                </Button>
        </Grid>

            <Grid Grid.Row="1" Grid.Column="1" RowDefinitions="auto,*" ColumnDefinitions="*,*">
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <Label Classes="Icon" Content="{Binding IconText}"/>
                    <TextBlock Text="{Binding Action}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="1">
                    <Label  Classes="FormLabel" Content="Category"/>
                    <TextBox  Text="{Binding SelectedBracket.Name}" Classes="FormInput" Watermark="Senior Men 90+kg"/> 
                    <ComboBox SelectedIndex="1">
                        <ComboBoxItem>Single Elimination</ComboBoxItem>
                        <ComboBoxItem>Double Elimination</ComboBoxItem>
                    </ComboBox>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <Label  Classes="FormLabel" Content="Competitors:"/>
                        <Label  Classes="FormLabel" Content="{Binding SelectedBracket.Count}"/>
                    </StackPanel>
                    <TextBox  
                        Text="{Binding SelectedBracket.Name}" 
                        Classes="FormInput" 
                        Watermark=""
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        /> 
                    <Button>
                        <StackPanel Orientation="Horizontal">

                            <TextBlock Text="Save"/>
                            <Label Classes="Icon" Content="&#xE248;"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>

    </Grid>

</UserControl>
